<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mClYouMayLike"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/shape_white_radius_12"
        android:elevation="@dimen/dp_5"
        android:outlineAmbientShadowColor="@color/color_1A000000"
        android:outlineSpotShadowColor="@color/color_1A000000">

        <com.victor.lib.common.view.widget.ShapedImageView
            android:id="@+id/mIvPoster"
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_288"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@color/color_CCCCCC"
            android:scaleType="centerCrop"
            app:shape_mode="round_rect_top"
            app:round_radius="@dimen/dp_12"/>

        <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mIvPoster"
            app:layout_constraintStart_toStartOf="@+id/mIvPoster"
            app:layout_constraintEnd_toEndOf="@+id/mIvPoster"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_28"
            android:maxLines="1"
            android:ellipsize="end"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>



