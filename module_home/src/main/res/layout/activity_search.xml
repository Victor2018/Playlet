<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="ResourceName">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed"
            app:contentScrim="@color/white"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:title="@string/app_name">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_112"
                    android:paddingStart="@dimen/dp_32"
                    android:background="@color/white"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/mEtSearch"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_68"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/mTvCancel"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:paddingStart="@dimen/dp_22"
                        android:paddingEnd="@dimen/dp_22"
                        android:background="@drawable/shape_f5f5f5_radius_34"
                        android:drawableLeft="@mipmap/ic_search"
                        android:drawablePadding="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/dp_28"
                        android:textColorHint="@color/color_999999"
                        android:textColor="@color/color_333333"
                        android:hint="输入关键词搜索"/>

                    <ImageView
                        android:id="@+id/mIvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/mEtSearch"
                        app:layout_constraintBottom_toBottomOf="@+id/mEtSearch"
                        app:layout_constraintEnd_toEndOf="@+id/mEtSearch"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:src="@mipmap/ic_home_search_cancel"
                        android:visibility="gone"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/mTvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@+id/mEtSearch"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingStart="@dimen/dp_32"
                        android:paddingEnd="@dimen/dp_32"
                        android:gravity="center"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dp_32"
                        android:text="取消"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp_40"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mClSearchHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_search_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:paddingStart="@dimen/dp_32"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="搜索历史"/>

                <ImageView
                    android:id="@+id/mIvDetete"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingStart="@dimen/dp_32"
                    android:paddingEnd="@dimen/dp_32"
                    android:src="@mipmap/ic_delete_search_keyword"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_search_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_search_history" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.victor.lib.common.view.widget.FlowLayout
                android:id="@+id/mFlHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_32"
                android:paddingEnd="@dimen/dp_32"
                app:flChildSpacingForLastRow="align"
                app:flChildSpacing="@dimen/dp_10"
                app:flRowSpacing="@dimen/dp_20" />

            <com.victor.lib.common.view.widget.LMRecyclerView
                android:id="@+id/mRvSearchHot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_40"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>



