<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/color_EB4F3A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_EB4F3A</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowBackground">@mipmap/img_splash</item>
    </style>

    <style name="bottom_tab_title_active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dp_22</item>
    </style>

    <style name="bottom_tab_title_inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dp_20</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--默认对话框样式-->
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--设置背景-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--默认对话框样式-->
    <style name="BaseNoTitleDialog" parent="BaseDialog">
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomDialogAnimShow">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_exit</item>
    </style>

    <style name="RightDialogAnimShow">
        <item name="android:windowEnterAnimation">@anim/anim_right_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_right_exit</item>
    </style>

    <style name="BasePopWindowStyle">
        <item name="android:windowEnterAnimation">@anim/anim_base_popwindow_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_popwindow_fade_out</item>
    </style>

    <style name="BasePopWindowStyleTop">
        <item name="android:windowEnterAnimation">@anim/anim_popwindow_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popwindow_top_out</item>
    </style>

    <style name="BasePopWindowStyleAlpha">
        <item name="android:windowEnterAnimation">@anim/anim_popwindow_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/anim_popwindow_alpha_out</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dp_56</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--默认分割线样式-->
    <style name="base_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_EFEFEF</item>
    </style>

    <style name="base_line_vertical">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_EFEFEF</item>
    </style>

    <style name="RadingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/dp_21</item>
        <item name="android:maxHeight">@dimen/dp_21</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="FixedTabStyle" parent="Widget.Design.TabLayout" tools:ignore="ResourceName">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/color_EB4F3A</item>
        <item name="tabIndicatorHeight">@dimen/dp_10</item>
        <item name="android:foreground">@null</item>
        <item name="tabBackground">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/HomeTabTextNormalAppearance</item>
        <item name="tabTextColor">@color/color_777777</item>
        <item name="tabSelectedTextColor">@color/color_333333</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="HomeTabTextNormalAppearance" parent="TextAppearance.Design.Tab" tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/dp_32</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HomeTabTextSelectedAppearance" parent="TextAppearance.Design.Tab" tools:ignore="ResourceName">
        <item name="android:textSize">@dimen/dp_40</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SheetStyle</item>
    </style>

    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>
</resources>