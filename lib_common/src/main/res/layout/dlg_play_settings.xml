<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mTvKey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_50"
    android:paddingStart="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_24"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_f6f6f6_top_radius_24"
    tools:ignore="ResourceName">

    <View
        android:id="@+id/line_top"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_f0f0f0_radius_4"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/shape_white_radius_16">

        <TextView
            android:id="@+id/tv_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_100"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_danmaku_black"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_333333"
            android:text="弹幕开关"/>

        <Switch
            android:id="@+id/mToggleRecommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_danmaku"
            app:layout_constraintBottom_toBottomOf="@+id/tv_danmaku"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dp_32"
            android:thumb="@drawable/switch_thumb_selector"
            android:track="@drawable/switch_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mTvShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/shape_white_top_radius_16"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_share_black"
        android:drawableRight="@mipmap/ic_right_grey"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="分享"/>

    <TextView
        android:id="@+id/mTvUnLike"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_unlike_black"
        android:drawableRight="@mipmap/ic_right_grey"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="不感兴趣"/>

    <TextView
        android:id="@+id/mTvReport"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/shape_white_bottom_radius_16"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ic_report_black"
        android:drawableRight="@mipmap/ic_right_grey"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="举报"/>

</LinearLayout>