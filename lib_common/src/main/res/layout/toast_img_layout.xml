<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:contentPaddingTop="@dimen/dp_28"
    app:contentPaddingBottom="@dimen/dp_30"
    app:contentPaddingLeft="@dimen/dp_30"
    app:contentPaddingRight="@dimen/dp_30"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_12"
    app:cardElevation="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_48"
        android:paddingEnd="@dimen/dp_48"
        android:drawableTop="@mipmap/ic_tip"
        android:drawablePadding="@dimen/dp_24"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        tools:text="请阅读并勾选协议"/>

</androidx.cardview.widget.CardView>