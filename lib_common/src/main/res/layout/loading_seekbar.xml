<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <com.victor.lib.common.view.widget.LightAnimationView
        android:id="@+id/mViewLoading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="@color/color_33EEEEEE"
        app:light_direction="left_to_right"
        app:light_duration="1500"
        app:light_color="#ffffff"
        app:light_peak_alpha="255"
        app:light_width="@dimen/dp_100"/>

</FrameLayout>