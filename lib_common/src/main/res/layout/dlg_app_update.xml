<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_48"
    android:background="@drawable/shape_white_radius_20"
    tools:ignore="MissingDefaultResource,ResourceName">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_48"
        android:src="@mipmap/img_app_update"/>

    <TextView
        android:id="@+id/mTvFindNewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_32"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_32"
        android:text="发现新版本V1.9.2"/>

    <com.victor.lib.common.view.widget.MaxHeightNestedScrollView
        android:id="@+id/mNsvUpdateContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maxHeight="@dimen/dp_500"
        app:layout_constraintTop_toBottomOf="@+id/mTvFindNewVersion"
        android:layout_marginTop="@dimen/dp_24"
        android:paddingStart="@dimen/dp_32"
        android:paddingEnd="@dimen/dp_32"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/mTvUpdateContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:textSize="@dimen/dp_28"
            android:textColor="@color/color_666666"
            tools:text="1.修复已知BUG，运行更顺畅\n2.修复已知BUG，运行更顺畅\n3.修复已知BUG，运行更顺畅\n4.修复已知BUG，运行更顺畅"/>

    </com.victor.lib.common.view.widget.MaxHeightNestedScrollView>

    <TextView
        android:id="@+id/mTvUpdateNow"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_88"
        app:layout_constraintTop_toBottomOf="@+id/mNsvUpdateContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/gradient_fc6d38_f12e29_radius_44"
        android:clickable="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_32"
        android:text="立即更新"/>

    <ProgressBar
        android:id="@+id/mPbDownloadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/mTvUpdateNow"
        app:layout_constraintStart_toStartOf="@+id/iv_header"
        app:layout_constraintEnd_toEndOf="@+id/iv_header"
        android:layout_height="@dimen/dp_4"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/pb_update_download"
        android:visibility="gone"
        tools:progress="50"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/mIvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:src="@mipmap/ic_app_update_dlg_close"
        android:padding="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>