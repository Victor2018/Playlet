<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_160"
    android:paddingStart="@dimen/dp_32"
    android:paddingEnd="@dimen/dp_32"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.9"
    tools:background="@mipmap/img_welfare_header"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_24"
        android:drawableRight="@mipmap/ic_welfare_header_right"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="金币收益"/>

    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_coin"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableRight="@mipmap/ic_welfare_header_right"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="我的现金"/>

    <TextView
        android:id="@+id/mTvCoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin"
        app:layout_constraintStart_toStartOf="@+id/tv_coin"
        app:layout_constraintEnd_toEndOf="@+id/tv_coin"
        android:textStyle="bold"
        android:textSize="@dimen/dp_66"
        android:textColor="@color/white"
        android:text="10"/>

    <TextView
        android:id="@+id/mTvCash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvCoin"
        app:layout_constraintStart_toStartOf="@+id/tv_cash"
        app:layout_constraintEnd_toEndOf="@+id/tv_cash"
        android:textStyle="bold"
        android:textSize="@dimen/dp_66"
        android:textColor="@color/white"
        android:text="6"/>

</androidx.constraintlayout.widget.ConstraintLayout>