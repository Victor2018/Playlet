<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_top_radius_20"
    android:paddingBottom="@dimen/dp_40"
    tools:ignore="MissingDefaultResource,ResourceName">

    <TextView
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_128"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="@dimen/dp_40"
        android:textColor="@color/color_333333"
        android:text="关闭个性化推荐" />

    <ImageView
        android:id="@+id/mIvClose"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/mTvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/mTvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_22"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/ic_dlg_close"/>

    <TextView
        android:id="@+id/mTvTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:text="关闭后，将无法看到个性化推荐内容，可能会影响您的阅读体验。"/>

    <TextView
        android:id="@+id/mTvConfirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@+id/mTvTip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mTvCancel"
        android:layout_marginTop="@dimen/dp_176"
        android:layout_marginStart="@dimen/dp_32"
        android:background="@drawable/shape_f5f5f5_radius_16"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="确认关闭"/>

    <TextView
        android:id="@+id/mTvCancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@+id/mTvTip"
        app:layout_constraintStart_toEndOf="@+id/mTvConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_176"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@drawable/gradient_fc6d38_f12e29_radius_16"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/white"
        android:text="我再想想"/>

</androidx.constraintlayout.widget.ConstraintLayout>