<?xml version="1.0" encoding="utf-8"?>
<com.victor.lib.common.view.widget.ColorSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mSrlRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlProgressBackgroundColorScheme="@color/colorPrimary"
    app:srlProgressViewStartOffset="@dimen/dp_0"
    app:srlProgressViewEndOffset="@dimen/dp_100"
    app:srlProgressViewScale="true"
    tools:ignore="ResourceName">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_500"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                app:titleEnabled="false"
                app:title="@string/app_name">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.9"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_welfare_header"
                    android:fitsSystemWindows="true"/>

                <include layout="@layout/act_withdraw_header"/>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    app:contentInsetStart="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/dp_32">

                        <ImageView
                            android:id="@+id/mIvBack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="@dimen/dp_22"
                            android:padding="@dimen/dp_10"
                            android:src="@mipmap/ic_back_white"/>

                        <TextView
                            android:id="@+id/mTvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_36"
                            android:text="提现"/>

                        <TextView
                            android:id="@+id/mTvRules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_28"
                            android:text="规则说明"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.victor.lib.common.view.widget.StickyNestedScrollLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:behavior_overlapTop="@dimen/dp_100">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:background="@drawable/shape_white_radius_16">

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:drawableLeft="@mipmap/ic_withdraw"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_32"
                    android:text="余额提现"/>
                <TextView
                    android:id="@+id/mTvWechat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    app:layout_constraintTop_toTopOf="@+id/tv_balance"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_balance"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawableLeft="@mipmap/ic_withdraw_wechat_gray"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_32"
                    android:text="cherry"/>

                <RadioGroup
                    android:id="@+id/mRgAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mRb20Rmb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rb_withdraw_selector"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:gravity="center"
                        android:textSize="@dimen/dp_36"
                        android:text="20元"
                        android:textColor="@color/rb_withdraw_text_color" />

                    <RadioButton
                        android:id="@+id/mRb50Rmb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rb_withdraw_selector"
                        android:layout_marginStart="@dimen/dp_20"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:textSize="@dimen/dp_36"
                        android:text="50元"
                        android:textColor="@color/rb_withdraw_text_color" />

                    <RadioButton
                        android:id="@+id/mRb100Rmb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rb_withdraw_selector"
                        android:layout_marginStart="@dimen/dp_20"
                        android:button="@android:color/transparent"
                        android:textSize="@dimen/dp_36"
                        android:gravity="center"
                        android:text="100元"
                        android:textColor="@color/rb_withdraw_text_color" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_withdraw_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_80"
                    app:layout_constraintTop_toBottomOf="@+id/mRgAmount"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp_28"
                    android:text="温馨提示："/>

                <TextView
                    android:id="@+id/mTvWithdrawTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_withdraw_tip"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/dp_24"
                    android:text="1，同一个微信号和设备视为同一账号，每日一个账号只可申请一次提现；\n2，提现申请后，审核一般在1-3个工作日完成，请您耐心等待。"/>

                <TextView
                    android:id="@+id/mTvWithdraw"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_88"
                    app:layout_constraintTop_toBottomOf="@+id/mTvWithdrawTip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_100"
                    android:layout_marginEnd="@dimen/dp_100"
                    android:background="@drawable/gradient_fc6d38_f12e29_radius_44"
                    android:clickable="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_32"
                    android:text="立即提现"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.victor.lib.common.view.widget.StickyNestedScrollLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.victor.lib.common.view.widget.ColorSwipeRefreshLayout>
