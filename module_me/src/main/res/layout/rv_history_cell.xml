<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_180"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="ResourceName">

    <com.victor.lib.common.view.widget.ShapedImageView
        android:id="@+id/mIvPoster"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_220"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/color_CCCCCC"
        android:scaleType="centerCrop"
        app:shape_mode="round_rect"
        app:round_radius="@dimen/dp_8"/>

    <TextView
        android:id="@+id/mTvContentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mIvPoster"
        app:layout_constraintStart_toStartOf="@+id/mIvPoster"
        app:layout_constraintEnd_toEndOf="@+id/mIvPoster"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_28"
        android:text="实习生是老板千金"/>

    <TextView
        android:id="@+id/mTvType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvContentName"
        app:layout_constraintStart_toStartOf="@+id/mTvContentName"
        app:layout_constraintEnd_toEndOf="@+id/mTvContentName"
        android:layout_marginTop="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingStart="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:background="@drawable/shape_fafafa_radius_8"
        android:gravity="center_vertical"
        android:textColor="@color/color_777777"
        android:textSize="@dimen/dp_24"
        android:text="1/66集"/>

</androidx.constraintlayout.widget.ConstraintLayout>