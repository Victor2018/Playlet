<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_128"
    android:paddingStart="@dimen/dp_32"
    android:paddingEnd="@dimen/dp_32"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.9"
    tools:ignore="ResourceName">
    
    <com.victor.lib.common.view.widget.ShapedImageView
        android:id="@+id/mCivAvatar"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_avatar"
        android:scaleType="centerCrop"
        app:shape_mode="circle"
        app:stroke_color="@color/white"
        app:stroke_width="@dimen/dp_2"/>

    <ImageView
        android:id="@+id/mIvSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        app:layout_constraintEnd_toEndOf="@+id/mCivAvatar"
        android:src="@mipmap/ic_me_male"/>

    <TextView
        android:id="@+id/mTvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/mCivAvatar"
        app:layout_constraintTop_toTopOf="@+id/mCivAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/mCivAvatar"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_me_header_edit"
        android:drawablePadding="@dimen/dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/dp_40"
        android:textColor="@color/color_333333"
        android:text="王大锤"/>

    <View
        android:id="@+id/view_action_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        app:layout_constraintTop_toBottomOf="@+id/mCivAvatar"
        android:background="@drawable/shape_white_radius_12"
        android:layout_marginTop="@dimen/dp_40"/>

    <TextView
        android:id="@+id/mTvWithdrawal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_action_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_action_bg"
        app:layout_constraintStart_toStartOf="@+id/view_action_bg"
        app:layout_constraintEnd_toStartOf="@+id/mTvMessage"
        android:drawableTop="@mipmap/ic_me_withdrawal"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="提现"/>

    <TextView
        android:id="@+id/mTvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_action_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_action_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvWithdrawal"
        app:layout_constraintEnd_toStartOf="@+id/mTvPreference"
        android:drawableTop="@mipmap/ic_me_message"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="消息"/>

    <TextView
        android:id="@+id/mTvPreference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_action_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_action_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvMessage"
        app:layout_constraintEnd_toStartOf="@+id/mTvCustomerService"
        android:drawableTop="@mipmap/ic_me_preference"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="偏好"/>

    <TextView
        android:id="@+id/mTvCustomerService"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/view_action_bg"
        app:layout_constraintBottom_toBottomOf="@+id/view_action_bg"
        app:layout_constraintStart_toEndOf="@+id/mTvPreference"
        app:layout_constraintEnd_toEndOf="@+id/view_action_bg"
        android:drawableTop="@mipmap/ic_me_customer_service"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/dp_28"
        android:textColor="@color/color_333333"
        android:text="客服"/>

</androidx.constraintlayout.widget.ConstraintLayout>