<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/mTvEveryDayCoin"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_160"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@mipmap/img_red_pkg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mTvEveryDayCoin"
        app:layout_constraintStart_toStartOf="@+id/mTvEveryDayCoin"
        app:layout_constraintEnd_toEndOf="@+id/mTvEveryDayCoin"
        android:layout_marginBottom="@dimen/dp_46"
        android:src="@mipmap/ic_red_pkg_icon"/>

    <TextView
        android:id="@+id/mTvCoinValue"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toTopOf="@+id/mTvEveryDayCoin"
        app:layout_constraintStart_toStartOf="@+id/mTvEveryDayCoin"
        app:layout_constraintEnd_toEndOf="@+id/mTvEveryDayCoin"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dp_42"
        android:textColor="@color/white"
        android:text="1200"/>

</androidx.constraintlayout.widget.ConstraintLayout>