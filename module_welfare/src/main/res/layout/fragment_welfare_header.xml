<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_160"
    android:paddingStart="@dimen/dp_32"
    android:paddingEnd="@dimen/dp_32"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.9"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_24"
        android:drawableRight="@mipmap/ic_welfare_header_right"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="金币(凌晨自动兑现)"/>

    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_coin"
        app:layout_constraintStart_toEndOf="@+id/tv_coin"
        android:layout_marginStart="@dimen/dp_40"
        android:drawableRight="@mipmap/ic_welfare_header_right"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_28"
        android:text="我的现金"/>

    <TextView
        android:id="@+id/mTvCoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_coin"
        app:layout_constraintStart_toStartOf="@+id/tv_coin"
        app:layout_constraintEnd_toEndOf="@+id/tv_coin"
        android:textStyle="bold"
        android:textSize="@dimen/dp_66"
        android:textColor="@color/white"
        android:text="10"/>

    <TextView
        android:id="@+id/mTvCash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/mTvCoin"
        app:layout_constraintStart_toStartOf="@+id/tv_cash"
        app:layout_constraintEnd_toEndOf="@+id/tv_cash"
        android:textStyle="bold"
        android:textSize="@dimen/dp_66"
        android:textColor="@color/white"
        android:text="6"/>

    <TextView
        android:id="@+id/mTvWithdrawal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        app:layout_constraintTop_toTopOf="@+id/mTvCash"
        app:layout_constraintBottom_toBottomOf="@+id/mTvCash"
        app:layout_constraintStart_toEndOf="@+id/mTvCash"
        android:layout_marginStart="@dimen/dp_20"
        android:background="@drawable/shape_white_radius_26"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_20"
        android:gravity="center"
        android:drawableLeft="@mipmap/ic_withdrawal"
        android:drawablePadding="@dimen/dp_10"
        android:textStyle="bold"
        android:textSize="@dimen/dp_20"
        android:textColor="@color/color_333333"
        android:text="提现"/>

</androidx.constraintlayout.widget.ConstraintLayout>